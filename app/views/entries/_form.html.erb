	<%= f.label "Data" %><br />
	<%= f.date_select (:date, :order=>[:day,:month,:year] )%><br />
  </div>

	<%= f.hidden_field :user_id, :value => current_user.id %><br />

  <div class="field">
    <%= f.label "Valor" %><br />
    <%= f.text_field :value %>
  </div><br />
  <div class="actions">
    <%= f.submit "Adicionar Receita"%>
<br />
  </div>
<% end %>
